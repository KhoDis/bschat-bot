// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id    Int               @id // Telegram ID
    tag   String? // Telegram tag
    name  String // Telegram username
    Music MusicSubmission[]
}

model MusicSubmission {
    fileId    String

    user   User @relation(fields: [userId], references: [id])
    userId Int

    @@id([userId]) // TODO: send a message "This music has already been submitted by someone else, submit a different one or send this one on the next event."
}
