// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id    BigInt            @id // Telegram ID
    tag   String? // Telegram tag
    name  String // Telegram username
    Music MusicSubmission[] // TODO: rename to music, make 1 to 1 relation instead
}

model MusicSubmission {
    fileId String

    user   User   @relation(fields: [userId], references: [id])
    userId BigInt

    @@id([userId]) // TODO: send a message "This music has already been submitted by someone else, submit a different one or send this one on the next event."
}
